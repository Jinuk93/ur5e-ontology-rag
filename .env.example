# ============================================================
# .env.example - 환경변수 템플릿 파일
# ============================================================
# 이 파일은 Git에 올라가는 "템플릿"입니다.
# 실제 사용 시: 이 파일을 복사해서 .env 파일을 만드세요.
#
# 복사 명령어 (Windows):  copy .env.example .env
# 복사 명령어 (Mac/Linux): cp .env.example .env
# ============================================================


# ------------------------------------------------------------
# [1] OpenAI API 설정
# ------------------------------------------------------------
# OpenAI API 키 - https://platform.openai.com/api-keys 에서 발급
# 용도: 텍스트 임베딩 생성, LLM 답변 생성
# 주의: 절대 이 키를 Git에 올리면 안 됨! (해킹 위험)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx


# ------------------------------------------------------------
# [2] Neo4j 설정 (그래프 데이터베이스)
# ------------------------------------------------------------
# Neo4j란? 노드(점)와 관계(선)로 데이터를 저장하는 DB
# 용도: 온톨로지(지식그래프) 저장 - 증상→원인→조치 관계
NEO4J_URI=bolt://localhost:7687      # Neo4j 접속 주소 (bolt는 Neo4j 전용 프로토콜)
NEO4J_USER=neo4j                      # 사용자 이름 (기본값: neo4j)
NEO4J_PASSWORD=your-password-here     # 비밀번호 (Docker 실행 시 설정한 값)


# ------------------------------------------------------------
# [3] ChromaDB 설정 (벡터 데이터베이스)
# ------------------------------------------------------------
# ChromaDB란? 텍스트를 벡터(숫자 배열)로 변환해서 저장하는 DB
# 용도: "의미적으로 유사한" 문서를 검색 (키워드 매칭 X)
CHROMA_HOST=localhost                 # ChromaDB 서버 주소
CHROMA_PORT=8000                      # ChromaDB 포트
CHROMA_PERSIST_DIR=./stores/chroma    # 벡터 데이터 저장 경로


# ------------------------------------------------------------
# [4] 파일 경로 설정
# ------------------------------------------------------------
# 프로젝트에서 사용하는 주요 디렉토리 경로
DATA_RAW_DIR=./data/raw/pdf           # 원본 PDF 파일 저장 위치
DATA_PROCESSED_DIR=./data/processed   # 처리된 데이터 저장 위치
AUDIT_LOG_DIR=./stores/audit          # 로그/감사 기록 저장 위치


# ------------------------------------------------------------
# [5] RAG 파이프라인 설정
# ------------------------------------------------------------
# 이 값들은 나중에 configs/settings.yaml로 옮길 수도 있음
CHUNK_SIZE=512                        # 문서를 자르는 단위 (글자 수)
CHUNK_OVERLAP=50                      # 청크 간 겹치는 부분 (문맥 유지용)
TOP_K=5                               # 검색 시 가져올 문서 개수
SIMILARITY_THRESHOLD=0.7              # 유사도 임계값 (0~1, 높을수록 엄격)


# ------------------------------------------------------------
# [6] 로깅 설정 (선택)
# ------------------------------------------------------------
LOG_LEVEL=INFO                        # 로그 레벨: DEBUG, INFO, WARNING, ERROR
